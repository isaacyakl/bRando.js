{
	"name": "brandojs",
	"version": "0.1.3",
	"description": "Automatically rotate CSS backgrounds for any DOM element in a random or sequential order.",
	"main": "dist/bRando.js",
	"details": {
		"stylizedName": "bRando",
		"subtitle": "Website background randomizer",
		"nickName": "yak"
	},
	"scripts": {
		"dev": "conc -k -c \"auto\" -p \"[{name}]\" -n \"JEST,WEBPACK\" \"npm:watch-test\" \"npm:dev-webpack\"",
		"dev-webpack": "webpack-dev-server --mode=development",
		"watch-test": "jest --watchAll --verbose --coverage",
		"watch-docs": "conc --restart-after 10000 --restart-tries 3 -c \"auto\" -p \"[{name}]\" -n \"TYPEDOC,LIVE\" \"typedoc --watch\" \"live-server --open=/dist/docs\" \"npm i -g live-server@latest\"",
		"test": "jest --verbose --coverage",
		"build-readme": "npx @appnest/readme generate && npx jest --coverage=false ./src/readme.md.test.ts && Echo README is GOOD to go || Echo ERRORS FOUND IN README",
		"build-coverage": "npm run test -- && npm run build-coverage-badge",
		"build-coverage-badge": "npx coverage-badger -r ./dist/coverage/clover.xml -d ./dist/coverage/",
		"build-all": "npx update-browserslist-db@latest && npm run build-coverage && npm run build-readme && webpack --mode=production && typedoc",
		"preversion": "git checkout master && git pull && npm ci && npm run build-all",
		"publish": "npm publish"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/isaacyakl/brandojs.git"
	},
	"keywords": [
		"background changer",
		"background rotator",
		"css",
		"background-image",
		"background-color",
		"javascript",
		"randomizer",
		"random",
		"sequential"
	],
	"author": "Isaac 'yak' L. <i@isaacyakl.com> (https://www.isaacyakl.com/)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/isaacyakl/brandojs/issues"
	},
	"homepage": "https://isaacyakl.github.io/brandojs",
	"browserslist": [
		"defaults"
	],
	"devDependencies": {
		"@babel/core": "^7.20.7",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.18.6",
		"@types/jest": "^29.2.4",
		"@types/node": "^18.11.18",
		"babel-jest": "^29.3.1",
		"babel-loader": "^9.1.0",
		"concurrently": "^7.6.0",
		"copy-webpack-plugin": "^11.0.0",
		"coverage-badger": "^1.0.1",
		"handlebars": "^4.7.7",
		"html-webpack-harddisk-plugin": "^2.0.0",
		"html-webpack-plugin": "^5.5.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"marked": "^4.2.5",
		"terser-webpack-plugin": "^5.3.6",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typedoc": "^0.23.23",
		"typescript": "^4.9.4",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1",
		"webpack-dev-server": "^4.11.1"
	},
	"dependencies": {
		"@types/marked": "^4.0.8"
	}
}
